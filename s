<?php
// Определение текущей даты
$currentDate = date("Y-m-d");

// Спрашиваем у пользователя две цифровые переменные
echo "Введите первую цифру: ";
$input1 = trim(readline());
$num1 = intval($input1);

echo "Введите вторую цифру: ";
$input2 = trim(readline());
$num2 = intval($input2);

// Суммируем две переменные и умножаем на текущую дату
$sum = ($num1 + $num2) * $currentDate;

// Выводим результат
echo "Сумма введенных цифр умноженная на текущую дату: " . $sum;
?>
